<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DoctordetailFragment">
   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="150dp"
       app:cardBackgroundColor="#6B4C85B6">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:id="@+id/imgDoc"
               android:src="@drawable/webdoc"
               android:layout_marginTop="20dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:orientation="vertical">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Details of Doctor"
                   android:layout_marginStart="100dp"
                   android:id="@+id/tvDetail"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Doctor Name"
                   android:layout_marginStart="100dp"
                   android:id="@+id/tvName"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Qualification"
                   android:layout_marginStart="100dp"
                   android:id="@+id/tvQual"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Experience"
                   android:layout_marginStart="100dp"
                   android:id="@+id/tvExperience"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Currently working"
                   android:layout_marginStart="100dp"
                   android:id="@+id/tvWork"/>









           </LinearLayout>

       </LinearLayout>









   </androidx.cardview.widget.CardView>



</LinearLayout>